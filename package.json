{
	"name": "eznotif",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"install-server": "bun install",
		"install-client": "cd client && bun install",
		"install-deps": "bun run install-server && bun run install-client",
		"dev-server": "bun --env-file .env --watch server.js",
		"dev-client": "cd client && bun dev",
		"dev": "conc \"bun dev-client\" \"bun dev-server\"",
		"build-client": "cd client && bun run build",
		"start": "bun --env-file .env server.js"
	},
	"dependencies": {
		"cors": "^2.8.6",
		"express": "^5.2.1",
		"web-push": "^3.6.7"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"concurrently": "^9.2.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
